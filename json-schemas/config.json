{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "type": "object",
  "required": [
    "models",
    "warehouses"
  ],
  "properties": {
    "defaults": {
      "anyOf": [
        {
          "$ref": "#/definitions/Defaults"
        },
        {
          "type": "null"
        }
      ]
    },
    "models": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Model"
      }
    },
    "warehouses": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Warehouse"
      }
    }
  },
  "definitions": {
    "Defaults": {
      "type": "object",
      "properties": {
        "warehouse": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Model": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "key_var",
            "model_ref",
            "name",
            "vendor"
          ],
          "properties": {
            "api_url": {
              "default": "https://api.openai.com/v1",
              "type": [
                "string",
                "null"
              ]
            },
            "azure_api_version": {
              "type": [
                "string",
                "null"
              ]
            },
            "azure_deployment_id": {
              "type": [
                "string",
                "null"
              ]
            },
            "key_var": {
              "type": "string"
            },
            "model_ref": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "vendor": {
              "type": "string",
              "enum": [
                "openai"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "api_key",
            "api_url",
            "model_ref",
            "name",
            "vendor"
          ],
          "properties": {
            "api_key": {
              "type": "string"
            },
            "api_url": {
              "type": "string"
            },
            "model_ref": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "vendor": {
              "type": "string",
              "enum": [
                "ollama"
              ]
            }
          }
        }
      ]
    },
    "Warehouse": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "key_path",
            "type"
          ],
          "properties": {
            "key_path": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "bigquery"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "duckdb"
              ]
            }
          }
        }
      ],
      "required": [
        "dataset",
        "name"
      ],
      "properties": {
        "dataset": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}