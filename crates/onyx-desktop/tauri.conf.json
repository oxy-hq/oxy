{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "onyx",
  "version": "0.1.0",
  "identifier": "ai.onyxint",
  "build": {
    "frontendDist": "../../web-app/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "onyx",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-user-files-write",
          "description": "This capability allows the `main` window on macOS and Windows access to `filesystem` write related commands and `dialog` commands to enable programmatic access to files selected by the user.",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:allow-open",
            "fs:default",
            {
              "all": true,
              "identifier": "fs:allow-exists",
              "allow": [
                { "path": "$HOME/**/*" },
                { "path": "$HOME/**/.*/**" },
                { "path": "$HOME/**/.*" }
              ]
            },
            {
              "identifier": "fs:allow-app-read-recursive",
              "allow": [
                { "path": "$HOME/**/*" },
                { "path": "$HOME/**/.*/**" },
                { "path": "$HOME/**/.*" }
              ]
            },
            {
              "identifier": "fs:allow-app-write",
              "allow": [
                { "path": "$HOME/**/*" },
                { "path": "$HOME/**/.*/**" },
                { "path": "$HOME/**/.*" }
              ]
            },
            {
              "identifier": "fs:allow-app-write-recursive",
              "allow": [
                { "path": "$HOME/**/*" },
                { "path": "$HOME/**/.*/**" },
                { "path": "$HOME/**/.*" }
              ]
            }
          ],
          "platforms": ["macOS", "windows"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
