{
  "packages": {
    "crates/onyx-core": {
      "release-type": "rust",
      "component": "onyx-core"
    },
    "crates/onyx-desktop": {
      "release-type": "rust",
      "component": "onyx-desktop"
    },
    "crates/onyx-py": {
      "release-type": "rust",
      "component": "onyx-py"
    },
    "crates/migration": {
      "release-type": "rust",
      "component": "migration"
    },
    "crates/entity": {
      "release-type": "rust",
      "component": "entity"
    }
  },
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "plugins": [
    {
      "type": "cargo-workspace",
      "merge": false
    },
    {
      "type": "node-workspace",
      "merge": false
    },
    {
      "type": "linked-versions",
      "groupName": "onyx",
      "components": [
        "onyx-core",
        "onyx-py",
        "migration",
        "entity",
        "onyx-desktop"
      ]
    }
  ],
  "changelog-sections": [
    {
      "type": "feat",
      "section": "<!-- 0 -->🚀 Features"
    },
    {
      "type": "feature",
      "section": "<!-- 0 -->🚀 Features"
    },
    {
      "type": "fix",
      "section": "<!-- 1 -->🐛 Bug Fixes"
    },
    {
      "type": "perf",
      "section": "<!-- 4 -->⚡ Performance"
    },
    {
      "type": "revert",
      "section": "<!-- 9 -->◀️ Revert"
    }
  ],
  "skip-github-release": false,
  "include-component-in-tag": true,
  "include-v-in-tag": false,
  "versioning": "default"
}
